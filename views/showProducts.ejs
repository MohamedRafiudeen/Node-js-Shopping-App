<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/CSS/showProducts.css">
</head>
    <body>

        <%- include('./includes/navbar.ejs') %>

        <h1>Products Page</h1>
        <div class="container" style="position: relative;margin: 3% auto;display: flex;flex-wrap: wrap;justify-content: center;">

        <% for (let product of products) { %>
        <div class="card col-lg-3 col-md-3 col-sm-2 col-xs-4">
            <div class="card-title" style="max-height:4rem;min-height:3rem;align-items: center;display: flex;"><h3><%= product.pName %></h3></div>
            <div class="card-img-top" ><img style="position:relative;width: 100%;
                height: 15vw;
                object-fit: cover;" src="/<%=product.pImg %>" alt="img"></div>

            <div class="card-body">
                <p class="card-text"><%= product.pDesc %></p>
                <h5 class="card-text">Rs.<%= product.pPrice %></h5>
            </div>
            

          <div style="display: flex;justify-content: space-around;padding-bottom: 5%;">
            <form action="/shop/addToCart/<%= product._id %>" method: 'POST'>
                <button type="submit" class="btn btn-sm btn-outline-primary">Buy now</button>
            </form>
            <form action="/shop/addToCart/<%= product._id %>" method: 'POST'>
                <button type="submit" class="btn btn-sm btn-outline-primary">Add to cart</button>
            </form>
          </div>

        </div>
        <% } %>

        </div>

        <section class="page">
            <%- include('./includes/bottom.ejs') %>
 
            <!--  first page -->
            <% if(currentPage != 1){ %>
                <a href="/shop/?page=1">1</a>
            <% } %>


            <!--  previous page -->
            <% if(hasPrevPage && currentPage!= lastPage){ %>
                <a href="/shop/?page=<%= prevPage %>"><%= prevPage %></a>
            <% } %>

            <!-- current page -->
               <a href="/shop/?page=<%= currentPage %>" class="active"><%= currentPage %></a>
 

               <!-- next page -->
            <% if(hasNextPage){ %>
                <a href="/shop/?page=<%= nextPage %>"><%= nextPage %></a>
            <% } %>


            <!-- last page -->
            <% if(lastPage != currentPage && nextPage != lastPage){ %>
                <a href="/shop/?page=<%= lastPage %>"><%= lastPage %></a>
            <% } %>
         </section>

    </body>
</html>

