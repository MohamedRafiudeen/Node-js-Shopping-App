<%- include('./includes/head.ejs') %>
    <body>
        <%- include('./includes/navbar.ejs') %>

        <div class="container col-lg-3 col-md-5 col-sm-8 col-xs-4" style="position: relative;margin: 5% auto;max-width: 60%;">
            <h1><%= title %> </h1>


        <form action="/admin/add-products/?_csrf=<%=csrfToken%>" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label for="pName">Product name:</label>
                <input type="text" value="<% if(editing) { %> <%= prod.pName %> <% } else{ %>  <% } %>" name="pName" id="pName" class="form-control">
            </div>

            <div class="form-group">
                <label for="#pImg">Product Image: </label>
                <input  type="file" value="<% if(editing) { %> <%= prod.pImg %> <% } else{ %>  <% } %>" name="pImg" id="pImg" class="form-control"/>
            </div>

            <div class="form-group">
                <label for="#pDesc">Description: </label>
                <textarea  type="text" value="<% if(editing) { %> <%= prod.pDesc %> <% } else{ %>  <% } %>" name="pDesc" id="pDesc" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="#pPrice">Price:</label>
                <input type="number" value="<% if(editing) { %> <%= prod.pPrice %> <% } else{ %>  <% } %>" name="pPrice" id="pPrice" class="form-control">
            </div>

            <button type="submit" class="btn btn-<% if(editing) { %>success<% } else { %>primary <% } %>"><% if(editing) { %> Update <% } else { %> Submit <% } %></button>
        </form>
        </div>

    </body>
</html>